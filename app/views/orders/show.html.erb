<div class="col-md-6 col-md-offset-3">
  <p>
    <strong>Order no:</strong>
    <%= @order.order_no %>
  </p>

  <p>
    <strong>Tracking no:</strong>
    <%= @order.tracking_no %>
  </p>

  <p>
    <strong>Purchase total:</strong>
    <%= @order.purchase_total %>
  </p>

  <p>
    <strong>Order type:</strong>
    <%= @order.order_type %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @order.user_id %>
  </p>

  <p>
    <strong>City:</strong>
    <%= order=(Order.find_by(params[@order.user_id]).addresses.first.city)%>
  </p>

  <p>
    <strong>Product Name:</strong>
    <%= product=(Order.find_by(params[@order.user_id]).products.first.name)%>
  </p>

  <p>
    <strong>Product Quantity:</strong>
    <%= product=(Order.find_by(params[@order.user_id]).order_products.first.quantity)%>
  </p>
  <%= link_to 'Edit', edit_order_path(@order) %> |
  <%= link_to 'Back', orders_path %>
</div>
