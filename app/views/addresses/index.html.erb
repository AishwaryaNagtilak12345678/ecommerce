<p id="notice"><%= notice %></p>
<div class="col-md-6 col-md-offset-3">
  <h1>Addresses</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Address Type</th>
        <th>Land mark</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>User</th>
        <th>Order</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <% if current_user.admin? || (current_user.id == address.user_id) %>
          <td><%= address.address_type %></td>
          <td><%= address.land_mark %></td>
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.zip %></td>
          <td><%= address.user.username %></td>
          <td><%= address.order_id %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Address', new_address_path %>
</div>
